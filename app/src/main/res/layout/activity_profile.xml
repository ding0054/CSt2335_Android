<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="@string/Profile"/>

        <TextView
            android:id="@+id/textView_name_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="@string/name"/>

        <EditText
            android:id="@+id/editText_name_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:hint="@string/ProfileName"
            android:inputType="textPersonName"/>

        <TextView
            android:id="@+id/textView_email_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="@string/YourEmail"/>

        <EditText
            android:id="@+id/editText_email_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:hint="@string/ProfileEmail"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/textView_picture_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="@string/Picture"/>


        <ImageButton
            android:id="@+id/image_clickButton_profile"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:text="@string/takePhoto" />


        <TextView
            android:id="@+id/textView_clickButton_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="@string/ButtonPicture"/>

        <Button
            android:id="@+id/ButtonGoToChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/GotoChat"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>